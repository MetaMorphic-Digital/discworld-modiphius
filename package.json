{
  "name": "discworld",
  "version": "0.0.0",
  "description": "discworld",
  "scripts": {
    "build": "npm run build:packs && npm run build:style && npm run build:code",
    "build:packs": "npm run db:pack",
    "build:code": "rollup -c",
    "build:style": "sass ./styles/index.scss ./public/discworld.css",
    "watch:style": "sass ./styles/index.scss ./public/discworld.css --watch",
    "dev": "npm run watch:style",
    "db:unpack": "node tools/pack-level-db.mjs package unpack",
    "db:pack": "node tools/pack-level-db.mjs package pack",
    "createSymlinks": "node ./tools/create-symlinks.mjs",
    "postinstall": "npm run createSymlinks"
  },
  "author": "Jalen Michals Levy",
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@foundryvtt/foundryvtt-cli": "^1.0.3",
    "@html-eslint/eslint-plugin": "^0.26.0",
    "@html-eslint/parser": "^0.26.0",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@stylistic/eslint-plugin": "^4.3.0",
    "eslint": "^9.27.0",
    "prettier": "^3.5.3",
    "rollup": "^4.9.1",
    "sass": "^1.89.0",
    "showdown": "^2.1.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  }
}
