<section class="sheet-body">
  {{#each (getConfigObject "traitTypes") as |traitI18nString traitType|}}
    <div class="trait-type flexrow">
      <label>{{localize traitI18nString}}:</label>
      <div class="trait-list">
        {{#each (getTraits ../document traitType) as |trait|}}
            <a data-action="traitAction" data-item-id="{{trait.id}}" data-item-uuid="{{trait.uuid}}">
              {{trait.name~}}
            </a>
          {{~#if ../../isEditMode}}
            <a data-action="traitAction" data-action-type="edit" data-item-id="{{trait.id}}" data-item-uuid="{{trait.uuid}}">
              <i class="fas fa-edit"></i>
            </a>
            <a data-action="traitAction" data-action-type="delete" data-item-id="{{trait.id}}" data-item-uuid="{{trait.uuid}}">
              <i class="fas fa-trash"></i>
            </a>
          {{/if}}
          {{~#unless @last}}, {{/unless}}
        {{/each}}
      </div>
    </div>
    <hr>
  {{/each}}
</section>
